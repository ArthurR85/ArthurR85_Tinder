<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>Filter - Tinder von Arthur</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    .navbar-custom {
      background-color: #f8f9fa;
    }
    .brand-row {
      padding: 10px 0;
      text-align: center;
    }
    .nav-row {
      padding: 0;
    }
    .nav-row .nav {
      justify-content: center;
    }
    .form-container {
      max-width: 500px;
      margin: 100px auto;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 10px;
      background-color: #fff;
      text-align: center;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-custom fixed-top flex-column">
    <div class="brand-row">
      <a class="navbar-brand" href="/">Tinder von Arthur</a>
    </div>
    <div class="nav-row">
      <ul class="nav">
        <li class="nav-item"><a class="nav-link" href="/profil">Profil</a></li>
        <li class="nav-item"><a class="nav-link" href="/people">People</a></li>
        <li class="nav-item"><a class="nav-link active" href="/filter">Filter</a></li>
        <li class="nav-item"><a class="nav-link" href="/matches">Matches</a></li>
      </ul>
    </div>
  </nav>

  <div class="container" style="padding-top:80px;">
    <div class="form-container">
      <h1>Filtereinstellungen</h1>
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      
      <form action="/filter" method="POST">
        <div class="mb-3">
          <label for="genderPreference" class="form-label">Geschlecht</label>
          <select id="genderPreference" name="genderPreference" class="form-control">
            <option value="">Alle</option>
            <option value="male">männlich</option>
            <option value="female">weiblich</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="minAge" class="form-label">Mindestalter</label>
          <input type="number" id="minAge" name="minAge" class="form-control" placeholder="z. B. 18">
        </div>
        <div class="mb-3">
          <label for="maxAge" class="form-label">Höchstalter</label>
          <input type="number" id="maxAge" name="maxAge" class="form-control" placeholder="z. B. 35">
        </div>
        <button type="submit" class="btn btn-primary">Filter anwenden</button>
      </form>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
